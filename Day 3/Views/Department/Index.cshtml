@model IEnumerable<Department>
@{
    ViewBag.Title = "Department List";

}


@*     <a href="/department/create" class="btn btn-danger">Create</a>*@
    <a asp-action="create" asp-controller="department" class="btn btn-danger">Create</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Department Name</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() == 0)
            {
                <tr>
                    <td colspan="3">No Department</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            @* <a href="/department/details/@item.Id" class="btn btn-warning">Details</a>*@
                            <a asp-action="details" asp-controller="department" asp-route-id="@item.Id" class="btn btn-warning">Details</a>

                            @* <a href="/department/update/@item.Id" class="btn btn-dark">Update</a> *@
                            <a asp-action="update" asp-route-id="@item.Id" class="btn btn-dark">Update</a>

                           @*  <a href="/department/delete/@item.Id" class="btn btn-danger" onclick="return confirm('Are you Sure?')">Delete</a> *@
                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you Sure?')">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
